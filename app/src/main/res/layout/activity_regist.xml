<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/reglayout"
        android:weightSum="8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/listtextbold"
                android:layout_margin="50px"
                android:layout_marginTop="50dp"
                android:text="회원 가입"
                android:gravity="center"
                android:textSize="100px"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="6"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:background="@drawable/address_taeduri"
                    android:fontFamily="@font/listtext"
                    android:hint="정비소 이름 ( 예> 행복 정비소)"
                    android:textColorHint="@android:color/darker_gray"
                    android:id="@+id/reg_name"
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:padding="15dp"
                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:background="@drawable/pass"
                    android:hint="비밀번호"
                    android:fontFamily="@font/listtext"
                    android:password="true"
                    android:textColorHint="@android:color/darker_gray"
                    android:id="@+id/reg_pw"
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:padding="15dp"
                    android:paddingTop="20dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:background="@drawable/pass"
                    android:hint="비밀번호 확인"
                    android:fontFamily="@font/listtext"
                    android:password="true"
                    android:textColorHint="@android:color/darker_gray"
                    android:id="@+id/reg_pwCk"
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:padding="15dp"
                    android:paddingTop="20dp"
                    android:layout_weight="1" />

<!--                <ImageView-->
<!--                    android:id="@+id/ckImg"-->
<!--                    android:adjustViewBounds="true"-->
<!--                    android:scaleType="fitCenter"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"/>-->

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_marginLeft="40dp"
                        android:padding="15dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        style="?android:attr/spinnerItemStyle"
                        android:background="@drawable/spinner_taeduri"
                        android:id="@+id/spinner" />
                    <Spinner
                        android:layout_marginLeft="10dp"
                        android:padding="15dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="18dp"
                        android:layout_width="wrap_content"
                        android:background="@drawable/spinner_taeduri"
                        style="?android:attr/spinnerItemStyle"
                        android:layout_height="50dp"
                        android:id="@+id/spinner2" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="상세 주소"
                        android:background="@drawable/address_taeduri"
                        android:fontFamily="@font/listtext"
                        android:id="@+id/detailAddress"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:padding="15dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="18dp"
                        android:textColorHint="@android:color/darker_gray"
                        android:textColor="@android:color/black" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:id="@+id/doregist"
                android:text="가입하기"
                android:background="@drawable/selector_registbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>
